    "contributors:add": "all-contributors add",
    "deploy": "ng deploy --base-href=https://username.github.io/repo/",
    "copy": "cpx README.md dist/ngx-reactive-loading",
    "build:lib": "ng build ngx-reactive-loading && npm run copy",
    "test:lib": "ng test ngx-reactive-loading --code-coverage",
    "test:lib:headless": "ng test ngx-reactive-loading --watch=false --browsers=ChromeHeadless --code-coverage",
    "semantic-release": "semantic-release"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.0.0",
