  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:demo": "npm run build:lib && ng serve ngx-reactive-loading-demo",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "prepare": "husky install",
